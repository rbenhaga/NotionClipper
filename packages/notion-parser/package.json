{
  "name": "@notion-clipper/notion-parser",
  "version": "1.0.0",
  "description": "Package dédié au parsing et à la conversion de contenu vers les blocs Notion API",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "pnpm run build:cjs && pnpm run build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc --module ESNext --outDir dist-esm && node scripts/build-esm.js",
    "dev": "tsc --watch",
    "clean": "rimraf dist dist-esm coverage test-results.json",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --collectCoverageFrom=src/**/*.ts",
    
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration",
    "test:comprehensive": "jest tests/comprehensive",
    
    "test:security": "jest tests/comprehensive/security.test.ts --verbose",
    "test:performance": "jest tests/comprehensive/performance.test.ts --verbose",
    "test:ultimate": "jest tests/comprehensive/ultimate.test.ts --verbose",
    "test:detection": "jest tests/comprehensive/detection.test.ts --verbose",
    "test:parsers": "jest tests/comprehensive/parsers.test.ts --verbose",
    
    "test:ci": "jest --ci --coverage --watchAll=false --testTimeout=60000 --maxWorkers=2",
    
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test:ci"
  },
  "keywords": [
    "notion",
    "parser",
    "markdown",
    "content",
    "blocks"
  ],
  "author": "Rayane Ben Haga",
  "license": "UNLICENSED",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist"
  ]
}