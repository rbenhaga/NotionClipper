{
  "name": "notion-clipper-monorepo",
  "version": "3.0.0",
  "description": "Notion Clipper Pro - Monorepo workspace",
  "private": true,
  "scripts": {
    "build:packages": "pnpm --filter \"@notion-clipper/core-*\" build && pnpm --filter \"@notion-clipper/adapters-*\" build && pnpm --filter @notion-clipper/ui build",
    "dev:app": "pnpm --filter @notion-clipper/app dev",
    "dev:extension": "pnpm --filter @notion-clipper/extension dev",
    "build:app": "pnpm --filter @notion-clipper/app build",
    "build:extension": "pnpm --filter @notion-clipper/extension build",
    "clean": "pnpm -r clean",
    "clean:packages": "pnpm -r exec rimraf dist .next .turbo .wxt",
    "clean:all": "pnpm clean:packages && rimraf node_modules"
  },
  "author": "Rayane Ben Haga",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/webextension-polyfill": "^0.12.4",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.10",
    "vite": "^5.4.20"
  },
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  }
}
