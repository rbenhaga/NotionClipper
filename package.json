{
    "name": "notion-clipper-pro",
    "version": "2.0.0",
    "description": "Notion Clipper - Professional Edition",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "dev": "electron . --dev",
        "dist": "electron-builder --publish=never"
    },
    "keywords": [
        "notion",
        "clipboard",
        "productivity"
    ],
    "author": "Rayane Ben Haga",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "react-scripts": "^5.0.1"
    },
    "dependencies": {
        "@emotion/react": "^11.11.1",
        "@emotion/styled": "^11.11.0",
        "@mui/icons-material": "^5.15.0",
        "@mui/material": "^5.15.0",
        "axios": "^1.6.2",
        "electron-store": "^8.1.0",
        "framer-motion": "^10.16.16",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-hotkeys-hook": "^4.4.1"
    },
    "build": {
        "appId": "com.rbenhaga.notionclipper",
        "productName": "Notion Clipper",
        "directories": {
            "output": "build"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns"
        }
    }
}
