{
  "name": "@notion-clipper/app",
  "version": "3.0.0",
  "description": "Notion Clipper Pro - Desktop Application",
  "main": "src/electron/main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others --kill-others-on-fail -n \"frontend,electron\" -c \"cyan,green\" \"pnpm:dev:frontend\" \"pnpm:dev:electron\"",
    "dev:frontend": "cd src/react && pnpm run dev",
    "dev:electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
    "dev:electron-only": "cross-env NODE_ENV=development electron .",
    "dev:test": "cross-env NODE_ENV=development node -e \"console.log('Testing...'); require('child_process').spawn('electron', ['.'], {stdio: 'inherit'})\"",
    "build": "pnpm run build:frontend && electron-builder",
    "build:frontend": "cd src/react && pnpm run build",
    "test": "pnpm run test:frontend && pnpm run test:electron",
    "test:frontend": "cd src/react && pnpm test",
    "test:electron": "jest src/electron/tests/",
    "clean": "rimraf dist-electron src/react/dist"
  },
  "author": "Rayane Ben Haga",
  "license": "UNLICENSED",
  "dependencies": {
    "@notion-clipper/adapters-electron": "workspace:*",
    "@notion-clipper/core": "workspace:*",
    "@notion-clipper/ui": "workspace:*",
    "@notionhq/client": "^5.1.0",
    "@tryfabric/martian": "^1.2.4",
    "better-sqlite3": "^12.2.0",
    "chokidar": "^4.0.3",
    "crypto-js": "^4.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.2.0",
    "fast-levenshtein": "^3.0.0",
    "form-data": "^4.0.4",
    "highlight.js": "^11.11.1",
    "lru-cache": "^11.1.0",
    "marked": "^16.1.1",
    "natural": "^6.10.0",
    "node-fetch": "^2.7.0",
    "node-html-parser": "^7.0.1",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/marked": "^5.0.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "28.3.3",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "rimraf": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.notionclipper.pro",
    "productName": "Notion Clipper Pro",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "src/electron/**/*",
      "src/react/dist/**/*",
      "assets/**/*",
      "!backend/**/*",
      "!*.py"
    ],
    "extraResources": [],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    }
  }
}
