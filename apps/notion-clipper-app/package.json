{
  "name": "@notion-clipper/app",
  "version": "3.0.0",
  "description": "Notion Clipper Pro - Desktop Application",
  "main": "dist/main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others --kill-others-on-fail -n \"frontend,electron\" -c \"cyan,green\" \"pnpm:dev:frontend\" \"pnpm:dev:electron\"",
    "dev:frontend": "cd src/react && pnpm run dev",
    "dev:electron": "wait-on tcp:3000 && pnpm run build:electron && cross-env NODE_ENV=development electron dist/main.js",
    "dev:electron-only": "pnpm run build:electron && cross-env NODE_ENV=development electron dist/main.js",
    "build": "pnpm run build:frontend && pnpm run build:electron && electron-builder",
    "build:frontend": "cd src/react && pnpm run build",
    "build:electron": "tsc && node scripts/copy-assets.js",
    "watch:electron": "tsc --watch",
    "generate-icons": "node ../../scripts/generate-all-icons.js",
    "copy-extension-icons": "node ../../scripts/copy-extension-icons.js",
    "prebuild": "echo 'Skipping icon generation for now'",
    "test": "pnpm run test:frontend && pnpm run test:electron",
    "test:frontend": "cd src/react && pnpm test",
    "test:electron": "jest src/electron/tests/",
    "clean": "rimraf dist-electron src/react/dist",
    "clean-config": "node clean-config.js"
  },
  "author": "Rayane Ben Haga",
  "license": "UNLICENSED",
  "dependencies": {
    "@notion-clipper/adapters-electron": "workspace:*",
    "@notion-clipper/core-electron": "workspace:*",
    "@notion-clipper/core-shared": "workspace:*",
    "@notion-clipper/notion-parser": "workspace:*",
    "@notion-clipper/ui": "workspace:*",
    "@notionhq/client": "^5.1.0",
    "@tryfabric/martian": "^1.2.4",
    "chokidar": "^4.0.3",
    "dotenv": "^17.2.3",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.2.0",
    "fast-levenshtein": "^3.0.0",
    "form-data": "^4.0.4",
    "highlight.js": "^11.11.1",
    "lru-cache": "^11.1.0",
    "marked": "^16.1.1",
    "node-fetch": "^2.7.0",
    "node-html-parser": "^7.0.1",
    "react-resizable-panels": "^3.0.6",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2",
    "@types/node": "^24.9.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "28.3.3",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "pkg": "^5.8.1",
    "rimraf": "^5.0.0",
    "sharp": "^0.33.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.notionclipper.pro",
    "productName": "Notion Clipper Pro",
    "directories": {
      "output": "dist-final"
    },
    "files": [
      "dist/**/*",
      "src/react/dist/**/*",
      "assets/**/*"
    ],
    "asarUnpack": [
      "node_modules/**/*"
    ],
    "win": {
      "target": "dir",
      "icon": "assets/icons/app-icon-256.png"
    }
  }
}