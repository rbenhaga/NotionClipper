# Configuration NotionClipper Pro
# Copiez ce fichier vers .env et configurez vos variables

# Environnement
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=localhost
API_PORT=5000

# Notion API (optionnel - peut être configuré via l'interface)
NOTION_TOKEN=

# ImgBB API (optionnel - peut être configuré via l'interface)
IMGBB_API_KEY=

# Monitoring (optionnel)
SENTRY_DSN=

# Sécurité
ENCRYPTION_ENABLED=true
SESSION_TIMEOUT=3600

# Fonctionnalités
AUTO_SAVE=true
PREVIEW_ENABLED=true
SUGGESTIONS_ENABLED=true
ANALYTICS_ENABLED=false 